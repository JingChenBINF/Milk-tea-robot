<?xml version="1.0"?>

<robot name="planar2r" xmlns:xacro="http://www.ros.org/wiki/xacro">
	<xacro:property name="robot_params" value="${load_yaml('../launch/init_config.yaml')}" />
	<xacro:property name="link_lengths" value="${robot_params['link_lengths']}" />
	<xacro:property name="link1_length" value="${link_lengths['l1']}" />
	<xacro:property name="link2_length" value="${link_lengths['l2']}" />
	<material name="mat_base">
		<color rgba="0.13 0.18 0.24 0.8"/>
	</material>
	<material name="mat_joint">
		<color rgba="0.10 0.32 0.46 0.8"/>
	</material>
	<material name="mat_link1">
		<color rgba="0.48 0.14 0.11 0.7"/>
	</material>

	<material name="mat_link2">
		<color rgba="0.10 0.44 0.24 0.7"/>
	</material>

	<link name="base_link">
		<visual>
			<geometry>
				<cylinder length = "0.2" radius = "0.15" />
			</geometry>
			<material name="mat_base"/>
		</visual>
	</link>

	<link name="link1">
		<visual>
			<geometry>
				<box size="${link1_length} 0.2 0.1"/>
			</geometry>
			<material name="mat_link1"/>
			<origin rpy="0 0 0" xyz="${link1_length/2} 0 0"/>
		</visual>
	</link>

	<joint name="joint1" type="continuous">
		<axis xyz="0 0 1" />
		<parent link="base_link"/>
		<child link="link1"/>
	</joint>


	<link name="link2">
		<visual>
			<geometry>
				<box size="${link2_length} 0.2 0.1"/>
			</geometry>
			<material name="mat_link2"/>
			<origin rpy="0 0 0" xyz="${link2_length/2} 0 0"/>
		</visual>
	</link>

	<joint name="joint2" type="continuous">
		<axis xyz="0 0 1" />
		<parent link="link1"/>
		<child link="link2"/>
		<origin xyz="${link1_length} 0 0"/>
	</joint>

	<link name="endEffector">
		<visual>
			<geometry>
				<cylinder length = "0.2" radius = "0.01" />
			</geometry>
			<material name="mat_link2"/>
			<origin rpy="0 0 0" xyz="0 0 0"/>
		</visual>
	</link>

	<joint name="endEff" type="fixed">
		<parent link="link2"/>
		<child link="endEffector"/>
		<origin xyz="${link2_length} 0 0"/>
	</joint>

</robot>
